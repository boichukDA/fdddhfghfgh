<?xml version="1.0" encoding="utf-8"?>
    <ru.diaproject.vkplus.core.view.SquareFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/photo_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/one_or_two_vertical_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical"

            android:visibility="gone">

            <ImageView
                android:id="@+id/first_im_view_vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingBottom="1dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/second_im_view_vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="1dp"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/one_or_two_horizontal_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/first_im_view_horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingRight="1dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/second_im_view_horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="1dp"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/three_or_four_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone">

            <ru.diaproject.vkplus.core.view.SquareWidthImageView
                android:id="@+id/main_34_im_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:id="@+id/sub_layout_34_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:paddingTop="1dp"
                android:visibility="gone">

                <ru.diaproject.vkplus.core.view.SquareWidthImageView
                    android:id="@+id/first_34_im_view_horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingRight="1dp"
                    android:scaleType="centerCrop" />

                <ru.diaproject.vkplus.core.view.SquareWidthImageView
                    android:id="@+id/second_34_im_view_horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:scaleType="centerCrop" />

                <ru.diaproject.vkplus.core.view.SquareWidthImageView
                    android:id="@+id/third_34_im_view_horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:scaleType="centerCrop" />

                <ru.diaproject.vkplus.core.view.SquareWidthImageView
                    android:id="@+id/fourth_34_im_view_horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="1dp"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sub_layout_34_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:background="#ffffff"
                android:orientation="vertical"
                android:paddingLeft="1dp">

                <ru.diaproject.vkplus.core.view.SquareHeightImageView
                    android:id="@+id/first_34_im_view_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingBottom="1dp"
                    android:paddingTop="1dp"
                    android:scaleType="centerCrop" />

                <ru.diaproject.vkplus.core.view.SquareHeightImageView
                    android:id="@+id/second_34_im_view_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingBottom="1dp"
                    android:paddingTop="1dp"
                    android:scaleType="centerCrop" />

                <ru.diaproject.vkplus.core.view.SquareHeightImageView
                    android:id="@+id/third_34_im_view_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingBottom="1dp"
                    android:paddingTop="1dp"
                    android:scaleType="centerCrop" />

                <ru.diaproject.vkplus.core.view.SquareHeightImageView
                    android:id="@+id/fourth_34_im_view_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingTop="1dp"
                    android:scaleType="centerCrop" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/six_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <ru.diaproject.vkplus.core.view.SquareHeightImageView
                    android:id="@+id/main_six_im_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:scaleType="centerCrop" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/picture_delimiter_background" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:orientation="vertical">

                    <ru.diaproject.vkplus.core.view.SquareWidthImageView
                        android:id="@+id/fourth_six_im_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/picture_delimiter_background" />

                    <ru.diaproject.vkplus.core.view.SquareWidthImageView
                        android:id="@+id/five_six_im_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/picture_delimiter_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ru.diaproject.vkplus.core.view.SquareWidthImageView
                    android:id="@+id/first_six_im_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/picture_delimiter_background" />

                <ru.diaproject.vkplus.core.view.SquareWidthImageView
                    android:id="@+id/second_six_im_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/picture_delimiter_background" />

                <ru.diaproject.vkplus.core.view.SquareWidthImageView
                    android:id="@+id/third_six_im_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.98"
                    android:scaleType="centerCrop" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/seven_layout_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/main_seven_im_view_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:scaleType="centerCrop" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/picture_delimiter_background" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/first_seven_im_view_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="centerCrop" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/picture_delimiter_background" />

                    <ImageView
                        android:id="@+id/second_seven_im_view_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="centerCrop" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/picture_delimiter_background" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <ru.diaproject.vkplus.core.view.SquareWidthImageView
                    android:id="@+id/third_seven_im_view_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/picture_delimiter_background" />

                <ru.diaproject.vkplus.core.view.SquareWidthImageView
                    android:id="@+id/fourth_seven_im_view_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/picture_delimiter_background" />

                <ru.diaproject.vkplus.core.view.SquareWidthImageView
                    android:id="@+id/five_seven_im_view_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/picture_delimiter_background" />

                <ru.diaproject.vkplus.core.view.SquareWidthImageView
                    android:id="@+id/six_seven_im_view_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/seven_layout_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/main_seven_im_view_vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:scaleType="centerCrop" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/picture_delimiter_background" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/first_seven_im_view_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/picture_delimiter_background" />

                    <ImageView
                        android:id="@+id/second_seven_im_view_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/picture_delimiter_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <ru.diaproject.vkplus.core.view.SquareHeightImageView
                    android:id="@+id/third_seven_im_view_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/picture_delimiter_background" />

                <ru.diaproject.vkplus.core.view.SquareHeightImageView
                    android:id="@+id/fourth_seven_im_view_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/picture_delimiter_background" />

                <ru.diaproject.vkplus.core.view.SquareHeightImageView
                    android:id="@+id/five_seven_im_view_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/picture_delimiter_background" />

                <ru.diaproject.vkplus.core.view.SquareHeightImageView
                    android:id="@+id/six_seven_im_view_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />
            </LinearLayout>
        </LinearLayout>
    </ru.diaproject.vkplus.core.view.SquareFrameLayout>